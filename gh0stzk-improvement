[module/colorpicker]
type = custom/text
label = "ï”¿"
click-left = Colorpicker
-------------------------------------
#!/bin/sh

sleep 0.1
color=$(xcolor -S 10 -P 150)
image=/tmp/${color}.webp

if [ "$color" ]; then
	echo $color | tr -d "\n" | xclip -selection clipboard
	magick -size 48x48 xc:"$color" ${image}
	dunstify -h string:x-dunst-stack-tag:picker -i ${image} "$color
	copied to clipboard"
fi
